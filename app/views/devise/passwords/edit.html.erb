<div class="wrapper">
<h2>Changement de mot de passe</h2>
</div>

<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: "Nouveau mot de passe",
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} cacactÃ¨res minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation, label: "Confirmez votre nouveau mot de passe", required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Modifier mon mot de passe", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
