<div class="container home-container">

  <div class="banner">
    <%= image_tag "logo" %>
  </div>

  <div class="info">

    <p><i class="fas fa-map-marker-alt"></i>55, Grande Rue - 47700 Casteljaloux</p>

    <p><i class="fas fa-clock"></i>Ouvert du mardi au samedi <br> 09h - 12h30 / 14h30 - 19h</p>

    <p><i class="fas fa-phone"></i>05 53 94 18 96</p>

  </div>

  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= link_to presentation_path, :action => 'go' do %>
